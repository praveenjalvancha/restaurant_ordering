<h1>Orders</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="row">Table number</th>
      <th scope="row">Status</th>
      <th scope="row">Category</th>
      <th scope="row">Orderd on</th>
      <th scope="row">Assigned Waiter</th>
      <th scope="row">Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.dine_table.table_number %></td>
        <td ><%= order.order_state %></td>
        <td ><%= order.category %></td>
        <td ><%= distance_of_time_in_words_to_now(order.created_at) %> ago</td>
        <td ><%= order.waiter.name %></td>
        <td ><%= order.total_price || '-' %></td>
        <td><%= link_to 'Show', order_path(order), class: 'btn btn-sm btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

