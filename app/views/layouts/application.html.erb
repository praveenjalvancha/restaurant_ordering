<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="m-top-60"></div>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dine_tables">Dine Tables</a>
          </li>
          <li class="nav-item">
             <a class="nav-link" href="/orders">Orders</a>
          </li>
           <li class="nav-item">
             <a class="nav-link" href="/menu_items">Menu Items</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/home/report_by_category">Reports</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
    	<div class="row">
    		<div class="col-sm-9 mtop-20">
          <div class="notify"></div>
    			<%= yield %>
    		</div>
    		<div class="col-sm-3">
				  <% if user_signed_in? %>
				    <%= current_user.email %>
				    <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-sm btn-danger"%>
				  <% else %>
				    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
				  <% end %>    			
    		</div>
    	</div>
    </div>
  </body>
</html>
